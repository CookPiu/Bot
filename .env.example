# 飞书应用配置
FEISHU_APP_ID=your_app_id_here
FEISHU_APP_SECRET=your_app_secret_here
FEISHU_VERIFY_TOKEN=your_verify_token_here
FEISHU_ENCRYPT_KEY=your_encrypt_key_here

# LLM 模型配置
DEEPSEEK_KEY=your_deepseek_key_here
GEMINI_KEY=your_gemini_key_here
OPENAI_KEY=your_openai_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
GEMINI_MODEL=gemini-pro

# GitHub Webhook 配置
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret
GITHUB_TOKEN=your_github_token_here

# 服务配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=true
ENVIRONMENT=development
WORKERS=1
RELOAD=true

# 飞书多维表格配置
FEISHU_BITABLE_APP_TOKEN=your_bitable_app_token
FEISHU_TASK_TABLE_ID=your_task_table_id
FEISHU_PERSON_TABLE_ID=your_person_table_id

# 数据库配置（可选）
DATABASE_URL=sqlite:///./app.db

# Redis配置（可选）
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# 安全配置
SECRET_KEY=your_secret_key_here_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 任务配置
DEFAULT_TASK_TIMEOUT=3600
MAX_TASK_RETRIES=3
TASK_CLEANUP_DAYS=30

# 通知配置
DAILY_REPORT_TIME=09:00
REMINDER_INTERVAL=24
MAX_REMINDER_COUNT=3

# 监控配置
MONITOR_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10
ALERT_WEBHOOK_URL=

# 功能开关
ENABLE_TASK_AUTO_ASSIGNMENT=true
ENABLE_QUALITY_CHECK=true
ENABLE_DAILY_REPORT=true
ENABLE_REMINDERS=true
ENABLE_GITHUB_INTEGRATION=true
ENABLE_METRICS=true

# 缓存配置
CACHE_TTL=3600
CACHE_ENABLED=true

# API限流配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# 时区和语言
TIMEZONE=Asia/Shanghai
DEFAULT_LANGUAGE=zh-CN